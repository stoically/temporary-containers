{
  "name": "tmpcontainers",
  "version": "0.0.0",
  "description": "Temporary Containers",
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "build": "rm -rf build web-ext-artifacts && npm run lint && npm test && web-ext build --overwrite-dest -s src && addons-linter web-ext-artifacts/temporary_containers-*.zip",
    "lint": "eslint src",
    "test": "nyc --reporter=html --reporter=text mocha ./test/setup.js test/*.test.js --timeout 60000",
    "test-watch": "mocha ./test/setup.js test/*.test.js --watch --tmp-debug",
    "check-dependencies": "ncu --peer --dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stoically/temporary-containers.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stoically/temporary-containers/issues"
  },
  "homepage": "https://github.com/stoically/temporary-containers#readme",
  "devDependencies": {
    "addons-linter": "^0.37.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "eslint": "^4.18.1",
    "mocha": "^5.0.1",
    "npm-check-updates": "^2.14.0",
    "nyc": "^11.4.1",
    "require-reload": "^0.2.2",
    "sinon": "^4.4.2",
    "sinon-chai": "^2.14.0",
    "web-ext": "^2.4.0",
    "webextensions-jsdom": "^0.5.0"
  },
  "peerDependencies": {
    "delay": "^2.0.0",
    "glob-to-regexp": "^0.4.0",
    "p-queue": "^2.3.0",
    "semver-compare": "^1.0.0"
  },
  "private": true,
  "nyc": {
    "exclude": [
      "test/**/*.js",
      "src/background/lib/**/*.js"
    ]
  }
}
